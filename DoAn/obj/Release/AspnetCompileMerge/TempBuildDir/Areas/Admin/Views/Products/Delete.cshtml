@model DoAn.Models.Product

@{
    ViewBag.Title = "Delete Product";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Delete Product</h2>

<div class="container row">
    <div class="col-md-4"><img src="~/Images/@Model.Image" width="420" height="420" /></div>
    <div class="col-md-2"></div>
    <div class="col-md-6">
        <form action="/admin/products/delete/@Model.ProductID" method="post">
            <input type="hidden" name="ProductID" value="@Model.ProductID" />

            <div class="form-group">
                <label for="ProductName" style="font-weight:bold; font-size:20px;">Product Name</label>
                <input type="text" class="form-control" id="ProductName" name="ProductName" value="@Model.ProductName" readonly />
            </div>

            <div class="form-group">
                <label for="Price" style="font-weight:bold; font-size:20px;">Price</label>
                <input type="number" class="form-control" id="Price" name="Price" value="@Model.Price" readonly />
            </div>

            <div class="form-group">
                <label for="Description" style="font-weight:bold; font-size:20px;">Description</label>
                <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description" readonly />
            </div>

            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="/admin/products" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>